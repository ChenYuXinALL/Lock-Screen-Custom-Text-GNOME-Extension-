<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="lock-screen-custom-text">
  <schema id="org.gnome.shell.extensions.lock-screen-custom-text" path="/org/gnome/shell/extensions/lock-screen-custom-text/">
    
    <key name="text-content" type="s">
      <default>"Custom Lock Screen Text"</default>
      <summary>Text Content</summary>
    </key>

    <key name="font-size" type="i">
      <default>24</default>
      <summary>Font Size (px)</summary>
    </key>

    <key name="font-color" type="s">
      <default>"rgba(255, 255, 255, 1)"</default>
      <summary>Font Color (CSS rgba)</summary>
    </key>

    <key name="enable-shadow" type="b">
      <default>true</default>
      <summary>Enable Shadow</summary>
    </key>

    <key name="shadow-color" type="s">
      <default>"rgba(0, 0, 0, 0.5)"</default>
      <summary>Shadow Color</summary>
    </key>

    <key name="shadow-x" type="i">
      <default>2</default>
      <summary>Shadow X Offset</summary>
    </key>

    <key name="shadow-y" type="i">
      <default>2</default>
      <summary>Shadow Y Offset</summary>
    </key>

    <key name="animation-mode" type="s">
      <default>"animate"</default>
      <summary>Animation Mode</summary>
      <description>Options: 'animate' (moves with clock), 'fixed' (stays in place)</description>
    </key>

    <key name="position-preset" type="s">
      <default>"top-center"</default>
      <summary>Position Preset</summary>
      <description>top-left, top-center, top-right, bottom-left, bottom-center, bottom-right</description>
    </key>

    <key name="offset-x" type="i">
      <default>0</default>
      <summary>Manual X Offset</summary>
    </key>

    <key name="offset-y" type="i">
      <default>100</default>
      <summary>Manual Y Offset</summary>
    </key>

  </schema>
</schemalist>